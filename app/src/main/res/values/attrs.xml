<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundImageView">
        <attr name="bg_src" format="reference" />
        <attr name="view_type">
            <enum name="circle" value="1"></enum>
            <enum name="round" value="2"></enum>
            <enum name="oval" value="3"></enum>
        </attr>
        <attr name="radius" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_width" format="dimension" />
    </declare-styleable>
    <declare-styleable name="RoundTextView">
        <attr name="type_view">
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
            <enum name="oval" value="3"/>
        </attr>
        <attr name="viwe_radius" format="dimension"/>
        <attr name="nomal_color" format="color"/>
        <attr name="select_color" format="color"/>
        <attr name="nomal_textcolor" format="color"/>
        <attr name="select_textcolor" format="color"/>
        <attr name="left_drawable_size" format="dimension"/>
        <attr name="right_drawable_size" format="dimension"/>
        <attr name="enabled_color" format="color"/>
        <attr name="pressed_color" format="color"/>
        <attr name="disabled_color" format="color"/>
    </declare-styleable>
</resources>